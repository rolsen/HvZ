package csci422.final_project;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.KeyEvent;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

public class players extends Activity {
	public void onCreate(Bundle b) {
		super.onCreate(b);
		setContentView(R.layout.players);
		
		final EditText zombieCode = (EditText) findViewById(R.id.zombie);
		zombieCode.setOnKeyListener(new View.OnKeyListener() {
			@Override
			public boolean onKey(View v, int keyCode, KeyEvent event) {
				// Perform action on clicks
				if((event.getAction() ==KeyEvent.ACTION_DOWN)&&(keyCode ==KeyEvent.KEYCODE_ENTER)) {
					Toast.makeText(this, zombieCode.getText(), Toast.LENGTH_SHORT).show();
					return true
				}
				
				//Intent i = new Intent(HvZ_phoneActivity.this, players.class);
				//startActivity(i);
			}

		});
	}
}
